---
interface Props {
  title: string;
  description: string;
  primaryCTA: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  note?: string;
}

const { title, description, primaryCTA, secondaryCTA, note } = Astro.props;
---

<section id="contacto" class="cta-section">
  <div class="container">
    <div class="cta-card glass">
      <h2>{title}</h2>
      <p>
        {description}
      </p>
      <div class="cta-buttons">
        <a
          href={primaryCTA.href}
          class="btn btn-primary btn-lg"
          id="cta-contact"
        >
          {primaryCTA.text}
        </a>
        {secondaryCTA && <a
          href={secondaryCTA.href}
          class="btn btn-secondary btn-lg"
          id="cta-learn"
        >
          {secondaryCTA.text}
        </a>}
      </div>
      {note && <p class="cta-note">{note}</p>}
    </div>
  </div>
</section>


<style>
  /* ===== CTA SECTION ===== */
  .cta-section {
    padding: var(--spacing-3xl) 0;
  }

  .cta-card {
    text-align: center;
    padding: var(--spacing-3xl);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
  }

  .cta-card h2 {
    margin-bottom: var(--spacing-md);
  }

  .cta-card p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-md);
  }

  .cta-note {
    text-align: center;
    background: var(--color-bg-secondary);
  }
</style>
