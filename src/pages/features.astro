---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import PageHeader from "../components/PageHeader.astro";
import Footer from "../components/Footer.astro";
import CTA from "../components/CTA.astro";
import FeaturesGrid from "../components/FeaturesGrid.astro";
---

<Layout
	title="Características - EAR Audit"
	description="Descubre todas las funcionalidades de EAR Audit: checklist personalizados, reportes automáticos, alertas en tiempo real y más."
>
	<Navigation />

	<PageHeader
		title="Funcionalidades <span class='text-gradient'>Completas</span>"
		subtitle="Herramientas diseñadas para auditorías efectivas y gestión profesional de tu establecimiento"
	/>

	<!-- Features Grid -->
	<FeaturesGrid />

	<CTA
		title="¿Listo para adaptar tu marca?"
		description="Únete a EAR y obtén el control que siempre deseaste, los mas altos estándares de calidad, cumplimiento y rentabilidad."
		primaryCTA={{ text: "Contacto", href: "mailto:sales@ear-audit.com" }}
		secondaryCTA={{ text: "Conocer Más", href: "/about" }}
	/>

	<Footer />
</Layout>
