---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import PageHeader from "../components/PageHeader.astro";
import Footer from "../components/Footer.astro";
import CTA from "../components/CTA.astro";
import FeaturesGrid from "../components/FeaturesGrid.astro";
---

<Layout
	title="Características - EAR Audit"
	description="Descubre todas las funcionalidades de EAR Audit: checklist personalizados, reportes automáticos, alertas en tiempo real y más."
>
	<Navigation />

	<PageHeader
		title="Descripción General del Servicio"
		subtitle="La solución propuesta consiste en una plataforma de software especializada en la gestión digital de auditorías operativas, diseñada para adaptarse a organizaciones de distintos sectores y tamaños. El sistema permite estandarizar procesos de control, optimizar la recopilación de información y mejorar la trazabilidad de los resultados, contribuyendo a una gestión más eficiente y basada en datos"
	/>

	<!-- Features Grid -->
	<FeaturesGrid />

	<CTA
		title="¿Listo para adaptar tu marca?"
		description="Únete a EAR y obtén el control que siempre deseaste, los mas altos estándares de calidad, cumplimiento y rentabilidad."
		primaryCTA={{ text: "Contacto", href: "mailto:sales@ear-audit.com" }}
		secondaryCTA={{ text: "Conocer Más", href: "/about" }}
	/>

	<Footer />
</Layout>
