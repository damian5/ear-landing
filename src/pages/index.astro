---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import CTA from "../components/CTA.astro";
import Hero from "../components/Hero.astro";
import Benefits from "../components/Benefits.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<title>Ear Audit - Auditorías Inteligentes empresa o marca</title>
		<meta
			name="description"
			content="Optimiza la calidad y cumplimiento de tu restaurante con Ear Audit. Auditorías digitales, reportes detallados y seguimiento en tiempo real."
		/>
		<meta
			name="keywords"
			content="auditoría restaurantes, control de calidad, inspección restaurantes, cumplimiento normativo, gestión restaurantes"
		/>

		<!-- Open Graph -->
		<meta
			property="og:title"
			content="Ear Audit - Auditorías Inteligentes empresa o marca"
		/>
		<meta
			property="og:description"
			content="Optimiza la calidad y cumplimiento de tu restaurante con auditorías digitales inteligentes."
		/>
		<meta property="og:type" content="website" />

		<!-- Fonts are loaded via CSS @import -->
		<ViewTransitions />
	</head>
	<body>
		<!-- Background Effects -->
		<div
			class="bg-gradient-radial purple"
			style="top: -300px; left: -300px;"
		>
		</div>
		<div
			class="bg-gradient-radial blue"
			style="bottom: -300px; right: -300px;"
		>
		</div>

		<Navigation />

		<Hero />

		<Benefits />

		<!-- Resources Section -->
		<section
			id="recursos"
			style="background: var(--color-accent-gradient); border-radius: 20px"
		>
			<div class="container">
				<div class="section-header text-center">
					<h2 class="resources">RECURSOS</h2>
				</div>
				<div class="grid grid-2">
					<div class="card glass">
						<h3>CALIDAD DEL SERVICIO</h3>
						<p>
							Evalúa tiempos, actitud del personal y calidad del
							producto final. Mejoras en el servicio aumentan la
							satisfacción y lealtad del cliente.
						</p>
					</div>
					<div class="card glass">
						<h3>MAYOR RENTABILIDAD</h3>
						<p>
							Analiza las ventas y márgenes para identificar
							productos mas rentables. Optimiza estructura de
							precios para ser competitiva y cubrir costos
							adecuadamente.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Improvements Section -->
		<section
			id="mejoras"
			class="improvements"
			style="background: var(--color-bg-secondary);"
		>
			<div class="container">
				<div class="section-header text-center">
					<h2>MEJORAS BÁSICAS A PARTIR DE INCORPORAR EAR</h2>
				</div>
				<div class="grid grid-3">
					<div class="card glass text-center">
						<p>ESTADO DE RESULTADOS</p>
					</div>
					<div class="card glass text-center">
						<p>CALIDAD DE MANIPULACION DE PRODUCTOS</p>
					</div>
					<div class="card glass text-center">
						<p>CALIDAD DE PRODUCCIÓN</p>
					</div>
					<div class="card glass text-center">
						<p>OPTIMIZACIÓN DE ESPACIOS</p>
					</div>
					<div class="card glass text-center">
						<p>ATENCION AL PÚBLICO</p>
					</div>
					<div class="card glass text-center">
						<p>ESTADO EDILICIO</p>
					</div>
					<div class="card glass text-center">
						<p>CAPACITACION DE PERSONAL EN GENERAL</p>
					</div>
					<div class="card glass text-center">
						<p>PERDIDA RÁPIDA DE PERSONAL (REDUCE)</p>
					</div>
					<div class="card glass text-center">
						<p>HURTOS DEL PERSONAL</p>
					</div>
					<div class="card glass text-center">
						<p>CALIDAD DE PRODUCTO FINAL</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Templates Section -->
		<section
			id="plantillas"
			class="templates"
			style="background: var(--color-bg-secondary);"
		>
			<div class="container">
				<div class="section-header text-center">
					<h2>PLANTILLAS PARA AUDITORÍA GENÉRICA</h2>
					<p>
						Recomendación para mantener cualquier estado edilicio en
						forma
					</p>
				</div>
				<ul
					class="grid grid-3 list-none"
					style="list-style: none; padding: 0;"
				>
					<li class="card glass text-center">
						RECEPCION DE MERCADERIA
					</li>
					<li class="card glass text-center">MANIPULACION</li>
					<li class="card glass text-center">ALMACENAMIENTO</li>
					<li class="card glass text-center">PROCESOS DE HIGIENE</li>
					<li class="card glass text-center">
						INFRESTRUCTURA Y ESTADO EDILICIO
					</li>
					<li class="card glass text-center">EQUIPOS Y UTENSILIOS</li>
					<li class="card glass text-center">MANEJO DE RESIDUOS</li>
					<li class="card glass text-center">RRHH</li>
					<li class="card glass text-center">PLAGAS</li>
					<li class="card glass text-center">ALERGENOS</li>
					<li class="card glass text-center">
						ESTADO DE PRODUCTO FINAL
					</li>
					<li class="card glass text-center">
						SEGURIDAD Y EMERGENCIA
					</li>
				</ul>
			</div>
		</section>

		<!-- Mission Section -->
		<section
			id="mision"
			class="mission"
			style="background: var(--color-bg-secondary);"
		>
			<div class="container">
				<div class="grid grid-3">
					<div class="card glass">
						<h3>MISIÓN</h3>
						<p>
							LLEVAR EL CONTROL A LAS MANOS DE LOS DUEÑOS,
							ACCIONISTAS O SOCIOS DE LAS MARCAS CON LOS MAS ALTOS
							ESTÁNDARES DE ELITE.
						</p>
					</div>
					<div class="card glass">
						<h3>VISIÓN</h3>
						<p>
							ELEVAR EL NIVEL ACTUAL DE CUALQUIER ESTABLECIMIENTO,
							QUE LA MARCA SUBA UNA ESTRELLA.
						</p>
					</div>
					<div class="card glass">
						<h3>VALORES</h3>
						<p>NOS DEDICAMOS A AYUDAR A LOS QUE AYUDAN.</p>
					</div>
				</div>
			</div>
		</section>

		<CTA
			title="¿Listo para adaptar tu marca?"
			description="Únete a EAR y obtén el control que siempre deseaste, los mas altos estándares de calidad, cumplimiento y rentabilidad."
			primaryCTA={{
				text: "Contacto",
				href: "mailto:sales@ear-audit.com",
			}}
			secondaryCTA={{ text: "Conocer Más", href: "/about" }}
		/>

		<!-- Footer -->
		<Footer />
		<style>
			/* Shared/Local Styles */
			.section-header {
				margin-bottom: var(--spacing-3xl);
			}

			.section-header h2 {
				margin-bottom: var(--spacing-sm);
			}

			.section-header p {
				font-size: var(--font-size-lg);
			}

			.resources {
				color: var(--color-text-white);
			}
		</style>
	</body>
</html>
